<%= simple_form_for(@data_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :longhand_unit, :label => t('data_types.longhand_unit') %>
    <%= f.input :shorthand_unit, :label => t('data_types.shorthand_unit') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "#{f.object.new_record? ? t('data_types.button_create') : t('data_types.button_update')}" %>
  </div>
<% end %>
