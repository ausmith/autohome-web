<h1>Listing nodes</h1>

<table class="table table-striped">
  <tr>
    <th>MAC address</th>
    <th>IP address</th>
    <th>Status</th>
    <th>Offline?</th>
    <th>Last online</th>
    <th>Room</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.mac_address %></td>
    <td><%= node.ip_address %></td>
    <td><%= node.status %></td>
    <td><%= node.take_offline %></td>
    <td><%= node.last_online %></td>
    <td><%= node.rooms.map{ |r| r.name }.join(", ") %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

