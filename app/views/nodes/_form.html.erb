<%= simple_form_for(@node) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :mac_address %>
    <%= f.input :status %>
    <%= f.input :take_offline %>
    <%= f.association :rooms, :label => "DEVTEXT_Associated Rooms", :as => :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
