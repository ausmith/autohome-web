<%= simple_form_for(@sensor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :node_id %>
    <%= f.input :sensor_type_id %>
    <%= f.input :starting_pin %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
