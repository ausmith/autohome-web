<%= simple_form_for(@sensor_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :data_type, label_method: :longhand_unit %>
    <%= f.input :pins_used %>
    <%= f.input :library_file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
